---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { ContactForm } from "../components/ContactForm";
import i18next, { t, changeLanguage } from "i18next";
import { LanguageSelector } from "astro-i18next/components";

changeLanguage("es");

const lang = i18next.language;
const base = lang === "es" ? "" : `/${lang}`;
---

<Layout title="SOLAR-STORAGE">
	<main>
		<section class="h-screen bg-violet-300">
			
			  <div class="grid justify-items-end mx-14 py-5">
				<div class='flex items-center md:order-2 button-language'>
				{
				  i18next.language === 'en' ? (
					<img
					  src='/img/flag-us.svg'
					  alt='us flag'
					  class='h-6 w-6 rounded-full mr-2'
					/>
				  ) : (
					<img
					  src='/img/flag-mexico.svg'
					  alt='MÃ©xico flag'
					  class='h-6 w-6 rounded-full mr-2'
					/>
				  )
				}
				<LanguageSelector
				  showFlag={false}
				  languageMapping={{ en: 'EN', es: 'ES' }}
				  aria-label='Select language'
				  class='block w-full p-2.5 rounded-lg bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500'
				/>
			  </div>
			  </div>
		</section>
		<section class="h-screen bg-green-300">

		</section>
		<section class="bg-blue-300">
			<ContactForm />
		</section>
	</main>
</Layout>

