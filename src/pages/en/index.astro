---
import Layout from "../../layouts/Layout.astro";
import { ContactForm } from "../../components/ContactForm";
import i18next, { t, changeLanguage } from "i18next";
import { LanguageSelector } from "astro-i18next/components";

changeLanguage("en");

const lang = i18next.language;
const base = lang === "es" ? "" : `/${lang}`;
---

<Layout title="Hitachi | Energy Solar Storage Days ">
	<main>
		<section class="h-screen bg-gray-950 relative overflow-hidden flex justify-center items-center background-ssm-01  drop-shadow-xl">
			<div class="content z-20 text-white m-10">
			  <div class=" flex items-center absolute top-0 right-0 m-4 button-language">
				{i18next.language === 'en' ? (
				  <img src='/img/flag-us.svg' alt='us flag' class='h-6 w-6 rounded-full mr-2' />
				) : (
				  <img src='/img/flag-mexico.svg' alt='México flag' class='h-6 w-6 rounded-full mr-2' />
				)}
				<LanguageSelector showFlag={false} languageMapping={{ en: 'EN', es: 'ES' }} aria-label='Select language' class='block w-full p-2.5 rounded-lg bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500' />
			  </div>
			  <div class="max-w-3xl mx-auto md:py-0 py-14">
				<div class="grid md:grid-cols-2 md:gap-10 gap-6 pt-14">
					<div class="flex items-center justify-center">
						<img src="/img/logo_ssm.webp" alt="" class="md:size-auto w-60">
					</div>
					<div class="flex items-center justify-center">
						<img src='/img/logo_hitachi_blanco.webp' alt="" class="md:size-auto w-60">
					</div>
				</div>
				<p class="text-center mt-10 md:text-5xl text-4xl font-bold">{t("home.title")}</p>
				<p class="text-center mt-10 md:text-3xl text-3xl" set:html={t("home.date")}></p>
			  </div>
			</div>
			<!-- <video autoplay muted loop id="video" class="absolute inset-0 w-full h-full object-cover z-10">
			  <source src="/solarpowerBG.webm" type="video/webm">
			  Tu navegador no soporta videos HTML5.
			</video> -->
		  </section>
		<section class="bg-gray-900   md:pt-14 p-10">
			<p class="text-white text-center font-bold md:text-4xl text-2xl pt-8 pb-14">{t("home.texto-invitación")}</p>
			<ContactForm client:visible />
		</section>
	</main>
	<footer class="bg-gray-800 background-ssm">
		<div class="p-5 container mx-auto px-4">
		  <div
			class="grid md:grid-cols-6 grid-cols-3 place-items-center items-center gap-8"
		  >
			<a href="" target="_blank">
			  <img
				src="/img/logo_ssm.webp"
				alt="Expo de Sustentabilidad en Mexico"
				width="120"
			  />
			</a>
			<a href="" target="_blank">
			  <img
			  	src='/img/logo_hitachi_blanco.webp'
				alt="Expo de Sustentabilidad en Mexico"
				width="170"
			  />
			</a>
			<a href="" target="_blank">
			  <img
				src="/img/igeco_bn.webp"
				alt="Expo de Sustentabilidad en Mexico"
				width="150"
			  />
			</a>
			<a href="" target="_blank">
			  <img
				src="/img/deutsche_messe_bn.webp"
				alt="Expo de Sustentabilidad en Mexico"
				width="180"
			  />
			</a>
			<a href="" target="_blank">
			  <img
				src="/img/RE+ logo wht.webp"
				alt="Expo de Sustentabilidad en Mexico"
				width="100"
			  />
			</a>
			<a href="" target="_blank">
			  <img
				src="/img/SNEC logo wht.webp"
				alt="Expo de Sustentabilidad en Mexico"
				width="100"
			  />
			</a>
		  </div>
		</div>
	  </footer>
</Layout>

<style>

	.background-ssm-01{
		background-image: url("/img/background-hitachi.webp");
    	background-repeat: no-repeat;
    	background-size: cover;
    	height: 100vh;
	}

	.background-ssm-01::before {
    content: "";
    background-color: rgba(0, 0, 0, 0.3); /* Aquí puedes ajustar la opacidad cambiando el valor alfa (último número) */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

	 .background-ssm {
    background-image: url("/img/background.webp");
    background-repeat: no-repeat;
    background-size: cover;
    height: auto;
  }
</style>
